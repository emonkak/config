Config { font = "-xos4-terminus-medium-r-normal--12-*-*-*-*-*-*-*,-mplus-gothic-medium-r-normal--12-*-*-*-*-*-*-*"
       , bgColor = "#000000"
       , fgColor = "#cccccc"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run StdinReader
                    , Run Cpu ["-L","5","-H","50","--low","#00cccc","--normal","#cccc00","--high","#cc0000"] 10
                    , Run Memory ["-t","Mem: <usedratio>%","-L","15","-H","50","--low","#00cccc","--normal","#cccc00","--high","#cc0000"] 10
                    , Run Network "wlan0" ["-t","<dev>: <rx> * <tx>","-L","0","-H","100","--low","#00cccc","--normal","#cccc00","--high","#cc0000"] 10
                    , Run Date "%a %_d %b %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% <fc=#666666>|</fc> %memory% <fc=#666666>|</fc> %wlan0% <fc=#666666>|</fc> <fc=#cccc00>%date%</fc>"
       }
