# My screenrc

escape ^Z^Z
maptimeout 0
msgwait 1
shell /bin/zsh
shelltitle 'shell'
term xterm-256color

defencoding utf-8
defscrollback 1000
encoding utf-8 utf-8

altscreen on
autodetach on
defbce on
startup_message off
vbell off

caption always '%{= Kw}%-w%{+bu}%n %t%{-}%+w%-18= | %D %m-%d %02c'
hardstatus ignore

hardcopydir "$HOME/Desktop/"


bind n screen
bind ^N screen
bind c remove
bind ^C remove
bind o only
bind ^O only

bind j next
bind ^J next
bind k prev
bind ^K prev

bind p paste .
bind ^P paste .
bind s split
bind ^S split
bind v split -v
bind ^v split -v

bind - resize -2
bind + resize +2
bind = resize =

bind . eval 'source $HOME/.screenrc' 'echo "~/.screenrc has been reloaded."'
