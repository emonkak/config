nnoremap <silent> [Space]k\  <Cmd>call <SID>luis_start(luis#source#history#new('expr'))<CR>
nnoremap <silent> [Space]ka  <Cmd>call <SID>luis_start(luis#source#arglist#new())<CR>
nnoremap <silent> [Space]kb  <Cmd>call <SID>luis_start_buffer_in_recently_used_order()<CR>
nnoremap <silent> [Space]kc  <Cmd>call <SID>luis_start_with_path(luis#source#file#new(), expand('%:h'))<CR>
nnoremap <silent> [Space]kd  <Cmd>call <SID>luis_start(luis#source#lsp_document_symbol#new(bufnr('%')))<CR>
nnoremap <silent> [Space]kf  <Cmd>call <SID>luis_start(luis#source#file#new())<CR>
nnoremap <silent> [Space]kg  <Cmd>call <SID>luis_start(luis#source#metarw#new('git'))<CR>
nnoremap <silent> [Space]kh  <Cmd>call <SID>luis_start(luis#source#help#import())<CR>
nnoremap <silent> [Space]ki  <Cmd>call <SID>luis_start(luis#source#history#new('input'))<CR>
nnoremap <silent> [Space]kj  <Cmd>call <SID>luis_start(luis#source#jumplist#new(win_getid()))<CR>
nnoremap <silent> [Space]kk  <Cmd>call <SID>luis_resume()<CR>
nnoremap <silent> [Space]km  <Cmd>call <SID>luis_start(luis#source#local_mark#new(bufnr('%')))<CR>
nnoremap <silent> [Space]kn  <Cmd>call <SID>luis_start_file_in_directory(expand("~/Sync/Documents/Notes"))<CR>
nnoremap <silent> [Space]ko  <Cmd>call <SID>luis_start(luis#source#oldfiles#new())<CR>
nnoremap <silent> [Space]kq  <Cmd>call <SID>luis_start(luis#source#quickfix#new())<CR>
nnoremap <silent> [Space]kr  <Cmd>call <SID>luis_start(luis#source#register#new())<CR>
nnoremap <silent> [Space]ks  <Cmd>call <SID>luis_start(luis#source#spell#import())<CR>
nnoremap <silent> [Space]kw  <Cmd>call <SID>luis_start_workspace(expand('~/Sync/works'))<CR>
nnoremap <silent> [Space]kz  <Cmd>call <SID>luis_start(luis#source#fold#new(win_getid()))<CR>

if executable('fzf-filter')
  nnoremap <silent> [Space]kl  <Cmd>call <SID>luis_start_async_files()<CR>
  nnoremap <silent> [Space]kt  <Cmd>call <SID>luis_start_async_tags()<CR>
endif

let s:luis_last_session = 0

function! s:luis_resume() abort  " {{{3
  if s:luis_last_session isnot 0
    call luis#start(s:luis_last_session)
  endif
endfunction

function! s:luis_start(source, ...) abort  " {{{3
  let options = get(a:000, 0, {})
  let session = luis#new_session(a:source, options)
  if luis#start(session)
    let s:luis_last_session = session
  endif
endfunction

function! s:luis_start_async_files() abort  " {{{3
  if isdirectory('.git')
    let command = [
    \   'fzf-filter', '-f', '1', '-p', '2', '-d', ' ', '-l', '1000',
    \   '--',
    \   'git', 'ls-files', '--exclude-standard', '-v', '-c', '-o',
    \ ]
    let options = {
    \   'to_candidate': function('s:to_git_file_candidate'),
    \ }
    let source = luis#source#async#new(
    \   'git-files',
    \   luis#kind#file#import(),
    \   command,
    \   options
    \ )
  else
    let command = [
    \   'fzf-filter', '-l', '1000',
    \   '--',
    \   'fd', '--type', 'f', '--strip-cwd-prefix', '-c', 'never', '--max-results', '10000',
    \ ]
    let options = {
    \   'to_candidate': { line -> {
    \     'word': line,
    \     'user_data': { 'preview_path': line },
    \   }},
    \ }
    let source = luis#source#async#new(
    \   'fd',
    \   luis#kind#file#import(),
    \   command,
    \   options
    \ )
  endif

  call s:luis_start(source)
endfunction

function! s:luis_start_async_tags() abort  " {{{3
  let name = 'tags'
  let kind = luis#kind#tag#import()
  let command = [
  \   'fzf-filter', '-l', '1000', '-f', '0',
  \   '--',
  \   'sh', '-c', 'echo "$@" | xargs -n 1 -P 4 cat', '',
  \ ]
  call extend(command, tagfiles())
  let options = {
  \   'to_candidate': function('s:to_tag_candidate'),
  \ }
  let source = luis#source#async#new(name, kind, command, options)
  return s:luis_start(source)
endfunction

function! s:luis_start_buffer_in_recently_used_order() abort  " {{{3
  let source = luis#source#buffer#new({
  \   'sort_priority': { bufinfo -> -bufinfo.lastused },
  \ })
  return s:luis_start(source)
endfunction

function! s:luis_start_file_in_directory(path) abort  " {{{3
  let source = luis#source#file#new()
  let hook = { 'path': a:path }

  function! hook.on_source_enter(context) abort dict
    lcd `=self.path`
  endfunction

  function! hook.on_source_leave(context) abort dict
    lcd -
  endfunction

  call s:luis_start(source, { 'hook': hook })
endfunction

function! s:luis_start_with_path(source, path) abort  " {{{3
  let initial_pattern = a:path != '' && a:path != '.'
  \                   ? a:path . '/'
  \                   : ''
  call s:luis_start(a:source, {
  \   'initial_pattern': initial_pattern,
  \ })
endfunction

function! s:luis_start_workspace(path) abort  " {{{3
  let Callback = function('s:luis_workspace_callback')
  let source = luis#source#workspace#new(a:path, Callback)
  call s:luis_start(source)
endfunction

function! s:luis_workspace_callback(path)  " {{{3
  tcd `=a:path`
  call s:luis_start_async_files()
endfunction

function! s:to_git_file_candidate(line) abort  " {{{3
  let components = split(a:line, '^\S\zs\s')
  let type = get(components, 0, '?')
  let path = get(components, 1, '')
  return {
  \   'word': path,
  \   'kind': type,
  \   'user_data': {
  \     'preview_path': path,
  \   },
  \ }
endfunction

function! s:to_tag_candidate(line) abort  " {{{3
  let components = split(a:line, '\t')
  return {
  \   'word': get(components, 0, a:line),
  \   'menu': get(components, 1, ''),
  \   'dup': 1,
  \ }
endfunction

