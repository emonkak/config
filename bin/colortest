#!/usr/bin/env bash

# This file echoes a bunch of color codes to the terminal to demonstrate what's
# available.  Each line is the color code of one forground color, out of 17
# (default + 16 escapes), followed by a test use of that color on all nine
# background colors (default + 8 escapes).
#
# Original: https://unix.stackexchange.com/questions/41563/how-to-create-a-testcolor-sh-like-the-following-screenshot/213471

set -o errexit -o nounset

if [[ "${TRACE:-0}" -ne 0 ]]
then
  set -o xtrace
fi

TEXT='gYw'
RESET="\033[0m"

echo -e "                40m    41m    42m    43m    44m    45m    46m    47m"

for row in '    m' '   1m' '  30m' '1;30m' '  31m' '1;31m' '  32m' '1;32m' \
           '  33m' '1;33m' '  34m' '1;34m' '  35m' '1;35m' '  36m' '1;36m' \
           '  37m' '1;37m'
do
  fg="\033[${row// /}"
  echo -en " ${row} ${fg}  ${TEXT}  "
  for column in 40m 41m 42m 43m 44m 45m 46m 47m
  do
    bg="\033[${column}"
    echo -en "${fg}${bg}  ${TEXT}  ${RESET}"
  done
  echo
done
