[alias]
	a = add
	br = branch
	ch = checkout
	co = commit --verbose
	cp = cherry-pick
	d = diff --find-copies
	dc = diff --find-copies --cached
	ds = diff --find-copies --cached HEAD^
	fix = commit --amend --verbose
	fixup = "!f() { if [[ $# -gt 0 ]]; then git commit --fixup $1; else local hash=$(git log -n 50 --pretty=format:\"%h %s\" --no-merges | fzf | awk \"{print \\$1}\"); git commit --fixup \"$hash\" && git rebase --autosquash \"$hash~1\"; fi; }; f"
	l = log --decorate --source --branches --tags --abbrev-commit
	lg = log --graph --pretty=oneline --decorate --source --branches --tags --abbrev-commit
	ls = ls-files
	r = reset
	re = restore
	rh = reset --hard
	rs = reset --soft
	sh = show
	st = status --branch
	sw = switch

[color]
	ui = true

[core]
	editor = nvim
	mergeoptions = --no-edit
	pager = delta --color-only --paging always
	quotepath = false
	ignorecase = false

[credential]
	helper = store

[delta]
	syntax-theme = ansi

[diff]
	renames = true

[grep]
	patternType = extended

[init]
	defaultBranch = master

[interactive]
	diffFilter = delta --color-only --paging always

[merge]
	ff = false
	log = true
	tool = vimdiff

[pager]
	branch = false

[pull]
	rebase = true

[push]
	default = current

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[user]
	name = Shota Nozaki
	email = emonkak@gmail.com

[include]
	path = ./config.private

